{
    "name": "myweeklyallowance/app",
    "description": "Pocket money management module for teenagers",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MyWeeklyAllowance\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MyWeeklyAllowance\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test-all": "./vendor/bin/phpunit tests",
        "test": "./vendor/bin/phpunit",
        "mwa-cli": "php ./bin/allowance",
        "test-coverage": "./vendor/bin/phpunit --coverage-text --coverage-html coverage/",
        "test-coverage-text": "./vendor/bin/phpunit --coverage-text",
        "test-coverage-clover": "./vendor/bin/phpunit --coverage-clover coverage.clover",
        "test-coverage-html": "./vendor/bin/phpunit --coverage-html coverage/"


    }
}

